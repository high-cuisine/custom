generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TelegramsUserbots {
  id         Int     @id @default(autoincrement())
  session    String
  isBan      Boolean @default(false)
  dailyCount Int     @default(0)
}

model WhatsappUserbots {
  id         Int     @id @default(autoincrement())
  session    String
  isBan      Boolean @default(false)
  dailyCount Int     @default(0)
  phone      String
}

model Users {
  id         Int    @id @default(autoincrement())
  telegramId String @unique
}

model Clients {
  id         Int     @id @default(autoincrement())
  phone      String
  email      String
  name       String
  telegramId String
  userId     Int
  proccesed  Boolean @default(false)
}

model Texts {
  id      Int    @id @default(autoincrement())
  content String
}
