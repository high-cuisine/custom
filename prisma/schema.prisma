// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TelegramsUserbots {
  id          Int     @id @default(autoincrement())
  session     String
  isBan       Boolean @default(false)
  dailyCount  Int     @default(0)
}

model WhatsappUserbots {
  id          Int     @id @default(autoincrement())
  session     String  // ID сессии (название папки с файлами сессии)
  phone       String  @default("")
  isBan       Boolean @default(false)
  dailyCount  Int     @default(0)
}

model Users {
  id          Int     @id @default(autoincrement())
  telegramId  String  @unique
}

model Clients {
  id          Int     @id @default(autoincrement())
  telegramId  String
  userId      Int
  phone       String
  email       String
  name        String
  proccesed   Boolean @default(false)
}

model Texts {
  id          Int     @id @default(autoincrement())
  content     String
}